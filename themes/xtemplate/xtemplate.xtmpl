    <div class="content">{content}</div>
    <div class="links">&raquo; {links}</div>
  </div>
<!-- END: comment_old -->


<!-- BEGIN: box -->
  <div class="box">
    <div class="title">{subject}</div>
    <div class="content">{content}</div>
 </div>
<!-- END: box -->


<!-- BEGIN: block -->
