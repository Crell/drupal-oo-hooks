class Blog {
  function Blog($blog) {
    global $user;

    $this = new Node($blog);
    $this->title = $blog[title];
    $this->body = $blog[body];
    $this->userid = $blog[userid] ? $blog[userid] : $user->userid;
    $this->timestamp = $blog[timestamp] ? $blog[timestamp] : time();
  }
}

