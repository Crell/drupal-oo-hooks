class Node {
  function Node($node) {
    global $user;
    $this->userid = $node[userid] ? $node[userid] : $user->userid;
    $this->title = $node[title];
    $this->timestamp = $node[attributes];
    $this->timestamp = $node[timestamp] ? $node[timestamp] : time();
  }
}

