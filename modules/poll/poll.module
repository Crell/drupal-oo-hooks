  drupal_add_css(drupal_get_path('module', 'poll') . '/poll.css');
}

/**
 * Implementation of hook_theme().
 */
function poll_theme() {
  return array(
    'poll_vote' => array(
      'template' => 'poll-vote',
      'arguments' => array('form' => NULL),
    ),
    'poll_choices' => array(
